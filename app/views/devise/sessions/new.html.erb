<div class="card ">
  <div class="card-content">
    <div class="content ">
      <div class="field ">
        <h2>使用者登入</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email,class:'label is-large'%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:'input ' %>
        </div>

        <div class="field">
          <%= f.label :password ,class:'label is-large'%><br />
            <%= f.password_field :password, autocomplete: "current-password" ,class:'input '  %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
          </div>
          <% end %>

            <div class="actions">
              <%= f.submit "Log in" ,class:'button is-info' %>
            </div>
            <% end %>
    </div>
  </div>
</div>