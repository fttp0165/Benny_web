<h1 class="title">文章列表</h1>

<%@articles.each do |article|%>
  <div class="field">
    <article class="message is-primary">
      <div class="message-body level">
       <%=link_to article.title,article_path(article),class:'has-text-black'%>
      </div>
    </article>
  </div>
<%end%>

<%= paginate @articles %>